@model CtrlUnidades.Models.Ubicacion

@{
    ViewData["Title"] = "AGREGAR UBICACIÓN";
}

<partial name="_LoginPartial" />

<br />
<br />
<h3 class="text-center"> Agregar una nueva ubicación</h3>

<div class="row">
    <div class="row px-5 mx-auto border col-10" style="position:center; width:1000px">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            &nbsp;
            <div class="form-group row">
                <label asp-for="Id_Ubicacion" style="font-size:21px">Id ubiación</label>
                <input asp-for="Id_Ubicacion" class="form-control" style="font-size:18px" />
                <span asp-validation-for="Id_Ubicacion" class="text-danger"></span>
            </div>
            &nbsp;
            <div class="form-group row">
                <label asp-for="Nombre" style="font-size:21px">Nombre</label>
                <input asp-for="Nombre" class="form-control" style="font-size:18px" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            &nbsp;
            <div class="form-group row">
                <label asp-for="Contacto" style="font-size:21px">Contacto</label>
                <input asp-for="Contacto" class="form-control" style="font-size:18px" type="number" />
                <span asp-validation-for="Contacto" class="text-danger"></span>
            </div>
            &nbsp;
            <div class="form-group row">
                <label asp-for="Observaciones" style="font-size:21px">Observaciones</label>
                <input asp-for="Observaciones" class="form-control" style="font-size:18px" />
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>
            &nbsp;
            @*Volver*@
            <div class="form-group row">
                <div class="col-12">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>
        </form>
    </div>
</div>
